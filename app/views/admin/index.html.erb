<% title t('.title') %>

<% if current_user.role == User::ROLES[:profile_editor] %>
  <div class="admin_panel row-fluid">
     <div class="span4">
   		<h3><%= t('.basic_header')%></h3>
   		<ul class="standard">
   			<li>
   				<%= link_to t('.core_indicator_text'), admin_core_indicator_text_path %>
   			</li>
   			<li>
   				<%= link_to t('.shape_text'), admin_shape_text_path %>
   			</li>
         </ul>
    </div>
  </div>
<% elsif current_user.role == User::ROLES[:admin] %>
  <div class="admin_panel row-fluid">
     <div class="span4">
   		<h3><%= t('.basic_header')%></h3>
   		<ul class="standard">
   			<li>
   				<%= link_to t('.users'), admin_users_path %>
   			</li>
   			<li>
   				<%= link_to t('.core_indicator_text'), admin_core_indicator_text_path %>
   			</li>
   			<li>
   				<%= link_to t('.shape_text'), admin_shape_text_path %>
   			</li>
   			<li>
   				<%= link_to t('.pages'), admin_pages_path %>
   			</li>
        <% if @show_news %>
     			<li>
     				<%= link_to t('.news'), admin_news_index_path %>
     			</li>
        <% end %>
         </ul>

         <h3><%= t('.event_header')%></h3>
         <ul class="standard">
            <li>
               <%= link_to t('.events'), admin_events_path %>
            </li>
            <li>
               <%= link_to t('.event_types'), admin_event_types_path %>
            </li>
            <li>
               <%= link_to t('.custom_views'), admin_event_custom_views_path %>
            </li>
           <li>
              <%= link_to t('.indicator_relationships'), admin_event_indicator_relationships_path %>
           </li>
            <li>
               <%= link_to t('.indicator_types'), admin_indicator_types_path %>
            </li>
            <li>
               <%= link_to t('.core_indicators'), admin_core_indicators_path %>
            </li>
            <li>
               <%= link_to t('.core_indicator_colors'), colors_admin_core_indicators_path %>
            </li>
            <li>
               <%= link_to t('.shape_types'), admin_shape_types_path %>
            </li>
            <li>
               <%= link_to t('.menu_live_events'), admin_menu_live_events_path %>
            </li>
         </ul>
    </div>
     <div class="span4">
   		<h3><%= t('.csv_header')%></h3>
   		<ul class="standard">
   			<li>
         <%= link_to t('.indicators'), upload_admin_indicators_path %>
         </li>
   			<li>
   			<%= link_to t('.change_indicator_scales'), upload_admin_indicator_scales_path %>
   			</li>
   			<li>
   			<%= link_to t('.data'), admin_data_sets_path %>
   			</li>
   			<li>
   			<%= link_to t('.shapes'), upload_admin_shapes_path %>
   			</li>
   		</ul>

   		<h3><%= t('.download_header')%></h3>
   		<ul class="standard">
   			<li>
   			<%= link_to t('.download_indicators'), download_admin_indicators_path %>
   			</li>
   		</ul>
    </div>
     <div class="span4">
   		<h3><%= t('.delete_header')%></h3>
   		<ul class="standard">
   			<li>
   			<%= link_to t('.delete_data'), admin_data_sets_path %>
   			</li>
   			<li>
   			<%= link_to t('.delete_shapes'), delete_admin_shapes_path %>
   			</li>
   		</ul>

   		<h3><%= t('.cache_clear_header')%></h3>
   		<ul class="standard">
   			<li>
   				<%= link_to t('.cache_clear_memory'), admin_cache_clear_memory_path %>
   			</li>
   			<li>
   				<%= link_to t('.cache_clear_files'), admin_cache_clear_files_path %>
   			</li>
   			<li>
   				<%= link_to t('.cache_clear_map_images'), admin_cache_clear_map_images_path %>
   			</li>
   			<li>
   				<%= link_to t('.cache_clear_all'), admin_cache_clear_all_path %>
   			</li>
   		</ul>
    </div>
  </div>
<% end %>
