<% if @error_type == "unsupported_browser"
  @page_title = t('.unsupported_browser_title')
elsif @error_type == "500"
  @page_title = t('.500_title')
elsif @error_type == "404"
  @page_title = t('.404_title')
else
  @page_title = t('.unknown_title')
end %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= "#{@page_title} > #{t('app.common.app_name')}" %></title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>

    <!-- For third-generation iPad with high-resolution Retina display: -->
    <!-- Size should be 144 x 144 pixels -->
    <%# favicon_link_tag 'images/apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144' %>

    <!-- For iPhone with high-resolution Retina display: -->
    <!-- Size should be 114 x 114 pixels -->
    <%# favicon_link_tag 'images/apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114' %>

    <!-- For first- and second-generation iPad: -->
    <!-- Size should be 72 x 72 pixels -->
    <%# favicon_link_tag 'images/apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72' %>

    <!-- For non-Retina iPhone, iPod Touch, and Android 2.1+ devices: -->
    <!-- Size should be 57 x 57 pixels -->
    <%# favicon_link_tag 'images/apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png' %>

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag '/favicon.ico', :rel => 'shortcut icon' %>
  </head>
  <body>
		<div id="wrapper_error">
      <div class="navbar navbar-fixed-top">
        <!-- Navbar header -->
        <div class="navbar-inner-head navbar-inner">
          <div class="container-fluid">
            <%= link_to(image_tag("header-text.png"), root_path(:locale => I18n.locale),
  								:title=> @page_title, :class=>"brand")%>

		        <div class="header-nav-collapse nav-collapse">
		          <ul class="nav pull-right">
								<li><%= link_to t(".news"), news_path %></li>
								<li><%= link_to t(".data_archives"), data_archives_path %></li>
								<% I18n.available_locales.each do |locale| %>
									<% if locale != I18n.locale %>
										<li><%= link_to t("app.language.#{locale}"), root_path(:locale => locale) %></li>
									<% end %>
								<% end %>
		          </ul>
						</div>
          </div>
        </div>
			</div>

			<div id="main" class="container-fluid">
		    <div class="content">
		      <div class="row-fluid">
		         <div class="span12">
								<% if @error_type == "unsupported_browser" %>
                 <h1><%= t('.unsupported_browser_title') %></h1>

									<p><%= t('.unsupported_browser_p1') %></p>
									<p><%= t('.unsupported_browser_p2') %></p>
									<ul class="standard">
										<li>
											<a href="http://www.google.com/chrome/"><%= t('.unsupported_browser_chrome') %></a>
										</li>
										<li>
											<a href="http://www.mozilla.org/firefox/new/"><%= t('.unsupported_browser_firefox') %></a>
										</li>
										<li>
											<a href="http://windows.microsoft.com/en-US/internet-explorer/downloads/ie/"><%= t('.unsupported_browser_ie') %></a>
										</li>
										<li>
											<a href="http://www.opera.com/download/"><%= t('.unsupported_browser_opera') %></a>
										</li>
										<li>
											<a href="http://support.apple.com/downloads/#internet"><%= t('.unsupported_browser_safari') %></a>
										</li>
									</ul>

								<% elsif @error_type == "500" %>
									<h1><%= t('.500_title') %></h1>

									<p><%= t('.500_p1') %></p>

								<% elsif @error_type == "404" %>
									<h1><%= t('.404_title') %></h1>

									<p><%= t('.404_p1') %></p>

								<% else %>
									<h1><%= t('.unknown_title') %></h1>

									<p><%= t('.unknown_p1') %></p>

							<% end %>
		          </div>
		      </div><!--/row-->
		    </div><!--/content-->
	    </div> <!-- /container -->
      <div class="push"><!--//--></div>
    </div><!--/wrapper-->

    <footer class="container-fluid">
		  <div class="row-fluid">
				<div class="ndi-logo span2">
					<%= link_to(image_tag("ndi-logo.png"), "http://www.ndi.org", :target => "_blank") %>
				</div>
				<div class="footer-nav span8">
	        <a id="footer_collapsed_menu" class="btn btn-navbar" data-target=".footer-nav-collapse" data-toggle="collapse">
						<%= image_tag("footer_collapsed_menu.png") %>
					</a>
	        <div class="footer-nav-collapse nav-collapse">
						<ul class="nav">
							<li>
								<%= link_to t('.about'), about_path(:layout => "fancybox"), :class => "fancybox" %>
							</li>
							<li class="spacer">|</li>
							<li>
								<%= link_to t('.data_source'), data_source_path(:layout => "fancybox"), :class => "fancybox" %>
							</li>
              <li class="spacer">|</li>
              <li>
                &copy; 2012-<%= DateTime.now.year %>
              </li>
						</ul>
					</div>
				</div>
       <div class="org-logo span2">
					<ul>
						<li id="left">
							<%= t(".js_link_text") %>:
						</li>
						<li id="right">
							<%= link_to(image_tag("forset-logo.png"), "https://forset.ge", :target => "_blank") %>
						</li>
					</ul>
				</div>
	    </div><!--/row-->
    </footer>



	<% if Rails.env.production? %>
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-108114441-2"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-108114441-2');
    </script>
	<% end %>
  </body>
</html>
